{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES6",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declaration": true
    },
    "include": ["src/**/*"],
    "type": "module",
    "typeRoots": ["./node_modules/@types", "./src/types"]
}